<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background5"
        android:paddingLeft="@dimen/padding_margin_medium"
        android:paddingRight="@dimen/padding_margin_medium"
        android:paddingTop="@dimen/padding_margin_medium">

        <ImageView
            android:id="@+id/trello_title_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/padding_margin_medium"
            android:layout_marginTop="@dimen/padding_margin_medium"
            android:contentDescription="@string/trello_img"
            android:src="@drawable/zapier" />

        <TextView
            android:id="@+id/fragmentFour_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/trello_title_img"
            android:fontFamily="serif"
            android:text="@string/fragmentThree_text_zapier"
            android:textAppearance="?android:textAppearanceLarge"
            android:textColor="@android:color/white"
            android:textStyle="italic" />

        <ImageView
            android:id="@+id/trello_desktop_img"
            android:layout_width="@dimen/img_rect_width"
            android:layout_height="@dimen/img_rect_heigth_small"
            android:layout_above="@id/trello_taco_img"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/padding_margin_medium"
            android:contentDescription="@string/trello_img"
            android:src="@drawable/taco_desktop" />

        <ImageView
            android:id="@+id/trello_taco_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="@dimen/padding_margin_medium"
            android:contentDescription="@string/trello_img"
            android:src="@drawable/taco"
            android:visibility="visible" />

        <TextView
            android:id="@+id/fragmentThree_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/padding_margin_medium"
            android:layout_marginLeft="@dimen/padding_margin_medium"
            android:layout_marginStart="@dimen/padding_margin_medium"
            android:layout_toEndOf="@id/trello_taco_img"
            android:layout_toRightOf="@id/trello_taco_img"
            android:fontFamily="serif"
            android:text="@string/fragmentThree_text"
            android:textAppearance="?android:textAppearanceLarge"
            android:textColor="@android:color/white"
            android:textStyle="italic"
            android:visibility="visible" />

    </RelativeLayout>

</ScrollView>